-- Color gallery page 2

)read newton
)read cdraw

-- create a Newton's iteration function for the equation x^3 = 2.
f := newtonStep(x^3 - 2)

setClipValue(4)
drawComplexVectorField(f^3, -3..3, -3..3)
drawComplex(f^3, -3..3, -3..3)
drawComplex(f^4, -3..3, -3..3)
